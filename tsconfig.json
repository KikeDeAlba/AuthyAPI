{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
